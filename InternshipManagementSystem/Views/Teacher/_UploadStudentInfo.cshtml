@using (Html.BeginForm("UploadStudentInfo", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal ", role = "form", onsubmit = "startLoading" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-sm-4 col-md-3 control-label">Select the Excel File</label>
        <div class="col-sm-6">
            <input onclick="OnUploadStudentInfo" class="form-control" type="file" name="UploadedFile">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 col-md-3"></div>
        <div class="col-sm-4">
            <input class="form-control" type="submit" name="Submit" value="Submit">
            <img class="fakeLoader" src="~/Picture/loading.gif" />
        </div>
    </div>
    if (ViewData["isSuccessful"] != null)
    {
        if ((bool)ViewData["isSuccessful"] == true)
        {
            <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close"><span class="glyphicon glyphicon-remove"></span></a>
                <strong>Upload succeeded.</strong>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <a href="#" class="close" data-dismiss="alert" aria-label="close"><span class="glyphicon glyphicon-remove"></span></a>
                <strong>Upload failed.</strong>
            </div>
        }
    }
}
<script>
    var OnUploadStudentInfo = function () {
        startLoading("uploadStudentInfo")
    }
</script>
<script src="~/Scripts/site.js"></script>
<link href="~/Content/site.css" rel="stylesheet" />